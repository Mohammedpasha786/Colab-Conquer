# Import necessary libraries
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load the dataset
url = "https://bit.ly/4nejNue"
df = pd.read_csv(url)

# Display first few rows
print("ðŸ“„ First 5 rows of the dataset:")
print(df.head())

# Basic info
print("\nðŸ“Š Dataset Info:")
print(df.info())

# Descriptive statistics
print("\nðŸ“ˆ Descriptive Statistics:")
print(df.describe())

# Mean, median, standard deviation
print("\nðŸ“Œ Mean:\n", df.mean(numeric_only=True))
print("\nðŸ“Œ Median:\n", df.median(numeric_only=True))
print("\nðŸ“Œ Standard Deviation:\n", df.std(numeric_only=True))

# Visualizations: Histograms
df.hist(bins=20, figsize=(12, 8), edgecolor='black')
plt.suptitle("Histograms of Iris Dataset Features")
plt.tight_layout()
plt.show()
